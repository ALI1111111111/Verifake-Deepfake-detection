{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Run",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$dart-flutter"
			],
			"options": {
				"cwd": "${workspaceFolder}/flutter"
			}
		},
		{
			"label": "Flutter: Run Web",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"-d",
				"web-server",
				"--web-port",
				"3000"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$dart-flutter"
			],
			"options": {
				"cwd": "${workspaceFolder}/flutter"
			}
		}
	]
}